<div class="col-lg-6">
    <div class="card shadow">
        <div class="card-body">
            <%= form_with(model: @refund, html: { data: { turbo: false } }) do |form| %>
            <div class="form-group mb-3">
                <%= form.label :no_of_tickets_to_be_refunded, class: 'form-label mb-2' %>
                <%= form.number_field :no_of_tickets, class: 'form-control form-control-lg', min: 1, max: @refund.booking.no_of_tickets %>
            </div>
            <div class="form-group mb-3">
                <%= form.submit 'Submit your request', class: 'btn btn-primary btn-lg' %>
            </div>
            <% end %>
        </div>
    </div>
</div>

<div class="col-lg-6">
    <div class="card show">
        <div class="card-body">
            <h4>Your booking details</h4>
                <p class="lead">
                    <strong>Booking for</strong> <%= link_to @refund.booking.event.name, @refund.booking.event, target: '_blank' %>
                </p>
                <p class="lead">
                    <strong>Total tickets booked:</strong> <%= @refund.booking.no_of_tickets %>
                </p>
                <p class="lead">
                    <strong>Amount payed:</strong> <%= @refund.booking.amount_paid %>
                </p>
                <p class="lead">
                    <strong>Booking date:</strong> <%= @refund.booking.created_at.strftime("%d %a %B, %Y") %>
                </p>
        </div>
    </div>
    </div>
</div>