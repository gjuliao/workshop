<div class="col-lg-6">
    <div class="card shadow">
        <div class="card-body">
            <%= form_with(model: @refund, html: { data: { turbo: false } }) do |form| %>
            <div class="form-group mb-3">
                <%= form.label :no_of_tickets_to_be_refunded, class: 'form-label mb-2' %>
                <%= form.number_field :no_of_tickets, class: 'form-control form-control-lg', min: 1, max: @refund.booking.no_of_tickets, required: true %>
            </div>
            <div class="form-group mb-3">
                <%= form.submit 'Submit your request', class: 'btn btn-primary btn-lg' %>
            </div>
            <% end %>
        </div>
    </div>
</div>

<div class="col-lg-6 mt-4">
    <div class="card show">
        <div class="card-body">
            <%= render 'booking_details', event: @event, booking: @booking %>
        </div>
    </div>
    </div>
</div>