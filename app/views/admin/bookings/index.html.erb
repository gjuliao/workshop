<div class="col-lg-12 mt-5">

    <div class="care mt-5 mb-5">
        <div class="card-body">
            <%= search_form_for @q, url: admin_bookings_path do |f| %>

                <h4>Search from Booking Attributes</h4>
                <div class="row mt-3">
                    <div class="col-lg-2">
                        <div class="form-group">
                            <%= f.label :order_number %>
                            <%= f.search_field :order_number_cont, class: 'form-control' %>
                        </div>
                    </div>

                    <div class="col-lg-2">
                        <div class="form-group">
                            <%= f.label :amount_paid_eq %>
                            <%= f.search_field :amount_paid_eq, class: 'form-control' %>
                        </div>
                    </div>

                    <div class="col-lg-2">
                        <div class="form-group">
                            <%= f.label :amount_paid_lteq %>
                            <%= f.search_field :amount_paid_lteq, class: 'form-control' %>
                        </div>
                    </div>

                    <div class="col-lg-2">
                        <div class="form-group">
                            <%= f.label :amount_paid_gteq %>
                            <%= f.search_field :amount_paid_gteq, class: 'form-control' %>
                        </div>
                    </div>
                </div>


                    <h4>Search from customer Attributes</h4>
                <div class="row mt-3">
                    <div class="col-lg-2">
                        <div class="form-group">
                            <%= f.label :customer_name %>
                            <%= f.search_field :customer_full_name_cont, class: 'form-control' %>
                        </div>
                    </div>

                    <div class="col-lg-2">
                        <div class="form-group">
                            <%= f.label :customer_email %>
                            <%= f.search_field :customer_email_cont, class: 'form-control' %>
                        </div>
                    </div>

                    <div class="col-lg-2">
                        <div class="form-group">
                            <%= f.label :customer_contact %>
                            <%= f.search_field :customer_contact_number_cont, class: 'form-control' %>
                        </div>
                    </div>

                    <div class="col-lg-2">
                        <div class="form-group">
                            <%= f.submit class: 'btn btn-primary btn-lg mt-2' %> 
                        </div>
                    </div>

                </div>
                    

                
            <% end %>
        </div>
    </div>
    <table class="table table-borded">
        <thead>
            <tr>
                <th>Booking Id</th>
                <th>Customer</th>
                <th>Event</th>
                <th>Amount Paid</th>
                <th>Tickets Booked</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
            <% @bookings.each do |booking| %>
                <tr>
                    <td><%= booking.order_number %></td>
                    <td><%= link_to booking.customer.full_name, admin_customer_path(booking.customer) %></td>
                    <td><%= link_to booking.event.name, admin_event_path(booking.event) %></td>
                    <td><%= booking.amount_paid %></td>
                    <td><%= booking.no_of_tickets %></td>
                    <td>
                        <div class="dropdown">
                            <button class="btn btn-primary dropdown-toggle" type="button" id="dropdownMenuButton1" data-bs-toggle="dropdown" aria-expanded="false">
                                Actions
                            </button>
                            <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton1">

                                <li><%= link_to "View", admin_booking_path(booking), class: "dropdown-item"%></li>
                                <li><%= link_to "Delete", admin_booking_path(booking), class: "dropdown-item", data: { confirm: 'Are you sure you want to delete?', method: :delete } %></li>
                            </ul>
                        </div>
                     </td>
                </tr>
            <% end %>
        </tbody>
    </table>
</div>